---
const highlights = [
  '인하대학교 컴퓨터공학과 졸업',
  'IT 동호회 SOPT (Android 파트장), Depromeet',
  'HECAS → Querensys 선임 연구원 (7년 6개월)'
];
---

<section id="about" class="min-h-screen flex items-center">
  <div class="max-w-3xl mx-auto px-6 md:px-8 py-16 md:py-24 w-full">
    <div class="flex flex-col items-center text-center space-y-8">
      {/* Status Badge */}
      <div class="inline-flex px-4 py-1.5 bg-secondary border border-border text-sm text-secondary-foreground">
        구직중
      </div>

      {/* Main Greeting */}
      <h1 class="text-3xl md:text-4xl tracking-tight text-foreground" style={{ fontFamily: 'var(--font-heading)' }}>
        Hello,<br> I'm Dongsoek Lee
      </h1>

      {/* Role - designed for typing animation */}
      <p class="text-xl md:text-2xl text-primary">
        Application Developer
      </p>

      {/* Career History */}
      <div class="space-y-3 pt-4">
        {highlights.map((highlight, index) => (
          <p class="text-sm md:text-base text-muted-foreground leading-relaxed">
            {highlight}
          </p>
        ))}
      </div>

      {/* Skill Badges */}
      <div class="flex gap-3 pt-4">
        <span class="px-4 py-2 bg-secondary border border-border text-sm text-secondary-foreground">
          Android
        </span>
        <span class="px-4 py-2 bg-secondary border border-border text-sm text-secondary-foreground">
          Web
        </span>
      </div>
    </div>
  </div>
</section>